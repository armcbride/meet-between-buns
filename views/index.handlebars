<div class="page-container">
  
  <div class="title">
    <img src="/assets/images/logo.png" class="logo">
  </div>



<div class="menu-container">
  <div class="menu">
    <h2>Burgers waitin' to be eaten:</h2>
    <img src="/assets/images/burger-icon.png" class= "icon">
    <ul class="items">
    {{#each burgers}}
      {{#unless eaten}}
        {{> burgers/burger-block eaten=true}}
      {{/unless}}
    {{/each}}
    </ul>
  </div>

  <div class="eaten">
    <h2>Burgers eaten:</h2>

    <ul class= "items">
      {{#each burgers}}
        {{#if eaten}}
          {{> burgers/burger-block eaten=false}}
        {{/if}}
      {{/each}}
    </ul>
    <img src="assets/images/wimpy.png" class="wimpy">
  </div>

<div class= "create">
    <h2>Create a Burger:</h2>
  <form class="create-form">
<img src="/assets/images/burger-icon.png" class= "icon">
  <div class="form-group-name">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name" placeholder="burger" class ="burger-input">
  </div>

  <div class="form-group">
    <label for="eaten">Eat now or save?</label><br>
    <label class="input-style">Eat!  
      <input type="checkbox" name="eaten" value="1" checked="checked"><span class="checkmark"></span> </label><br>
      <label class="input-style"> Save for later   
    <input class="input-style" type="checkbox" name="eaten" value="0"><span class="checkmark"></span>
    </label>
  </div>

    <button type="submit" class="btn">Create Burger</button>
  </form>
  </div>
    </div>
  </div>
</div>